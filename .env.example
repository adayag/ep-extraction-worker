# Server configuration
NODE_ENV=production
PORT=3001

# Authentication
EXTRACTION_SECRET=your-32-character-secret-here

# Browser configuration
CHROME_PATH=/usr/bin/chromium

# Concurrency control - max simultaneous Chrome contexts
# Lower this on resource-constrained VPS (e.g., 1-2 for 1GB RAM)
MAX_CONCURRENT=2

# Memory management - browser auto-restart settings
# Restart browser after this many ms of inactivity (default: 60000 = 1 minute)
BROWSER_IDLE_TIMEOUT=60000
# Maximum browser lifetime in ms before forced restart (default: 7200000 = 2 hours)
BROWSER_MAX_AGE=7200000

# Prometheus metrics port (default: 9090, internal only)
# METRICS_PORT=9090

# Graceful shutdown - max ms to wait for in-flight requests to drain (default: 30000 = 30s)
# SHUTDOWN_TIMEOUT=30000

# Circuit breaker watchdog - if circuit breaker stays open longer than this, process exits for container restart
# (default: 120000 = 2 minutes)
# CIRCUIT_BREAKER_EXIT_THRESHOLD=120000
